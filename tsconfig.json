{
    "include": ["src"],
    "exclude": ["build"],
    "compilerOptions": {
        "outDir": "./build",
        "target": "ESNext",
        "lib": ["ESNext", "WebWorker"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "types": ["@cloudflare/workers-types", "./src/index.d.ts"],
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
